
@{
    ViewBag.Title = "Book An Expert";
}

<section class="single-page-title" style="padding: 10% 0 5%;">
    <div class="container text-center">
        <h2>Book An Expert</h2>
    </div>
</section>
<!-- .page-title -->
@if(ViewBag.msg != null)
{
    <script>
        alert("@ViewBag.msg");
    </script>
}
<section class="contact-form ptb-100">
    <div class="container text-center">
        <div class="row ">
            <div class="col-sm-8" id="mainContent">
                <p>Enter your details</p>
                <form role="form" class="form-horizontal" id="practiction_form" method="post">
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">Name</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">
                                <input name="Name" class="form-control" required="required" type="text" placeholder="Name" value="" autocomplete="on">
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">Surname</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">
                                <input name="Surname" class="form-control" required="required" type="text" placeholder="Surname" value="" autocomplete="on">
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">Email</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">
                                <input name="Email" class="form-control" required="required" type="email" id="username" placeholder="Email" value="" autocomplete="on">
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">Phone Number</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">
                                <input name="phone" class="form-control" required="required" type="number" value="" autocomplete="on">
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">Company Name</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">
                                <input name="company" class="form-control" required="required" type="text" placeholder="Company" value="" autocomplete="on">
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">Appointment Time</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">
                                <input name="appointment_t" min="" id="date_inp" class="form-control" required="required" type="date" autocomplete="on" />
                                <span id="date_eror" style="font-weight:bold;" class="text-danger"></span>
                                <input name="appointment_D" min="08:00:00" max="20:00:00" id="time_inp" class="form-control" required="required" type="time" autocomplete="on" />
                                <span id="time_eror" class="text-danger"></span>
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">Practitioner Needed:</label>
                        <div class="col-sm-9">
                            <select name="Practitioner" class="form-control ">
                                <option value="General Practitioner">General Practitioner</option>
                                <option value="Chiropractor">Chiropractor</option>
                                <option value="Podiatrist">Podiatrist</option>
                                <option value="Nutritionist">Nutritionist</option>
                                <option value="Life coach">Life coach</option>
                                <option value="Psychologist">Psychologist</option>
                                <option value="Personal trainer">Personal trainer</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span class="sr-only">Buttons</span></label>
                        <div class="col-sm-9">
                            <input type="submit" class="btn btn-info" name="submit" value="Request">
                            <br>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>
@section scripts{
<script>
    $(document).ready(function () {
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd
        }
        if (mm < 10) {
            mm = '0' + mm
        }

        var todayStr = yyyy + '-' + mm + '-' + dd;
        var di = $("#date_inp");
        di.attr("min", todayStr);
        di.change(function () {
            var ndd = new Date(di.val());
            if (!(ndd.getDay() >= 1 && ndd.getDay() <= 5)) {
            //    di.val("");
              //  $("#date_eror").text("Date of Days should be from Monday to Friday");
            } else
                return true;
        });
        $("#practiction_form").submit(function () {
            var di = $("#date_inp");
            di.attr("min", todayStr);

            var ndd = new Date(di.val());
            if (!(ndd.getDay() >= 1 && ndd.getDay() <= 5)) {
                $("#date_eror").text("Date of Days should be from Monday to Friday");
                return false;
            } else {
                $("#date_eror").text("");
            }
        });
    });
</script>
}