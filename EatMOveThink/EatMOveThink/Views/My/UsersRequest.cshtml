
@{
    ViewBag.Title = "UsersRequest";
}

@model List<DatabaseModelProject.UserRequest>
<style>
    strong, b, h3, h5 {
        text-shadow: 1px 1px 1px #ccc;
    }
</style>
<section class="single-page-title" style="padding: 20% 0 5%;background:url(/img/hero-slide-3.jpg) no-repeat bottom;">
    <div class="container text-center">
        <h2>Users Request</h2>
    </div>
</section>
<!-- .page-title -->
<style>
    th,td{
        width:15%;
        padding:15px !important;
    }
    th:first-child,
    td:first-child{
        width:70%;
    }
</style>
<section class="x-services ptb-100 gray-bg">
    <section class="section-title">
        <div class="container text-center">
            <h2>
                Users Request
        </h2>
        <span class="bordered-icon"><i class="fa fa-circle-thin"></i></span>
    </div>
</section>

<div class="container">
    <div class="col-sm-10 panel" >
        <table class="table table-condensed table-hover table-bordered panel-body" style="width:100%;">
            <thead>
                <tr>
                    <th>Email</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var req in Model)
                {
                    <tr>
                        <td>@req.Email</td>
                        <td><a href="/My/UsersRequest?token=accept&id=@req.RequestId" class="btn-sm btn-success">Accept</a></td>
                        <td><a href="/My/UsersRequest?token=reject&id=@req.RequestId" class="btn-sm btn-warning">Reject</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- .container -->
</section>



