@{
    ViewBag.Title = "Login";
}

<section class="single-page-title" style="padding: 7% 0 5%;">
    <div class="container text-center">
        <h2>Log In</h2>
    </div>
</section>
<!-- .page-title -->

<section class="contact-form ptb-100">
    <div class="container text-center">
        <div class="row ">
            <div class="col-sm-8" id="mainContent">
                <h1>Please login to continue</h1>
                <p>Enter your details to login</p>

                <h5 class="text-danger">@ViewBag.error</h5>
                <form role="form" class="form-horizontal" id="login" action="/User/Login" method="post">
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">Email</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">
                                <input name="Email" class="form-control" required="required" type="email" id="username" placeholder="Email" value="" autocomplete="on">
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">Password</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">
                                <input name="password" class="form-control" required="required" type="Password" placeholder="Password" value="" autocomplete="on">
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span class="sr-only">Buttons</span></label>
                        <div class="col-sm-9">
                            <input type="submit" class="btn btn-success" name="submit" value="Login">
                            <a class="btn btn-default hide" href="reset/index.html">Forgot password?</a>
                            <br>
                            <h2 class="text-center" style="border-top:1px solid #ccc;margin-top:2%;padding-top:2%;">Don't have an account yet? <a href="/User/SignUp">Join now</a></h2>
                        </div>
                    </div>
                </form>
                <div class="clearfix"></div>
                <div class="pull-right hide" style="font-size: 85%">
                    view site
                    <a href="/Articles/terms-and-conditions">terms and conditions</a> and
                    <a href="/Articles/privacy-policy">privacy policy</a>
                </div>
            </div>
        </div>

    </div>
</section>
