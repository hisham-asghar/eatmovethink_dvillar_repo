<style>
    img.summary{
        width:220px;
        height:152px;
    }
    .caption_head{    
        max-height: 3ch;
        overflow: hidden;
        text-transform:capitalize;
    }
    .caption_head > a{   
        text-transform:uppercase;
        text-shadow:1px 1px 1px #ccc;
    }
    
    .read_more_{
        position: absolute;bottom: 18%;padding-left: 15px;right:6%;
    }
    .read_more_m{
        margin:3%;
    }
    h2{
        text-shadow:1px 1px 1px #ccc;
    }
</style>
<section class="x-services ptb-100 gray-bg">

    <section class="section-title">
        <div class="container text-center">
            <h2>Ignite Your Health, with our  Complete Wellness Hub</h2>
            <span class="bordered-icon"><i class="fa fa-circle-thin"></i></span>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="thumbnail clearfix">
                    <a href="#"><img class="img-responsive summary" src="/img/index_eat.jpg" alt="Image"></a>

                    <div class="caption" style="padding:15px;">
                        <h3 class="caption_head"><a href="#">SUGAR IS EVERYWHERE</a></h3>

                        <p>
                            @(eat.Substring(0, 293) + "..")
                        </p>.
                    </div>
                    <a href="/Home/Eat" class="read_more_ visible-sm visible-md visible-lg">Read More</a>
                    <a href="/Home/Eat" class="read_more_m visible-xs">Read More</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="thumbnail clearfix">
                    <a href="#"><img class="img-responsive summary" src="~/img/index_move.png" alt="Image"></a>

                    <div class="caption" style="padding:15px;">
                        <h3 class="caption_head"><a href="#">IS SITTING REALLT THE NEW SMOKING?</a></h3>

                        <p>                            
                        @(move.Substring(0, 252) + "..")
                        </p>.
                    </div>
                    <a href="/Home/Move" class="read_more_ visible-sm visible-md visible-lg">Read More</a>
                    <a href="/Home/Move" class="read_more_m visible-xs">Read More</a>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-md-6">
                <div class="thumbnail clearfix">
                    <a href="#"><img class="img-responsive summary" src="~/img/index_think.png" alt="Image"></a>

                    <div class="caption" style="padding:15px;">
                        <h3 class="caption_head"><a href="#">Are you running away from a lion everyday?</a></h3>

                        <p>
                            @(think.Substring(0, 266) + "...")
